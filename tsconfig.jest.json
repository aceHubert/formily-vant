{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "paths": {
      "@formily/vant": ["./packages/components/src"],
      "@formily/vant/esm/*": ["./packages/components/src"],
      "@formily/vant/lib/*": ["./packages/components/src"],
      "@formily/vant-*": ["./packages/*/src"]
    }
  },
  "exclude": ["./packages/*/esm", "./packages/*/lib"]
}
